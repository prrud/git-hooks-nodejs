{
  "name": "git-hooks-nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**",
    "lint-fix": "eslint src/** --fix",
    "success-message": "echo \"Tanks for committing $GIT_AUTHOR_NAME\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.2",
    "globals": "^15.1.0",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "npm run success-message"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "jest --findRelatedTests --passWithNoTests"
    ]
  }
}
